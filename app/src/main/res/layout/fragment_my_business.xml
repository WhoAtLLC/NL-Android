<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.root.wishlist.fragment.MyBusiness">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:scrollIndicators="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mybusiness_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Once you get the intro, what do you want to discuss?"
                    android:textColor="#7F7F7F"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textcounter1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="200"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">

                    <com.root.wishlist.util.MybusinessEdittext
                        android:id="@+id/message1_ext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EFEFEF"
                        android:gravity="top"
                        android:hint="The more compelling your reason, the more likely you are to get your intro request accepted."
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:maxLength="200"
                        android:padding="10dp"
                        android:scrollIndicators="none"
                        android:scrollbars="none"
                        android:singleLine="false"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:focusable="false"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_business_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Add any geographies, job title or departments you prefer (Optional)?"
                    android:textColor="#7F7F7F"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textcounter2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="200"
                        android:textSize="10sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">

                    <com.root.wishlist.util.MybusinessEdittext
                        android:id="@+id/message2_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EFEFEF"
                        android:gravity="top"
                        android:hint="The more specific you are,the most value you will recieve."
                        android:inputType="textMultiLine"
                        android:maxLength="200"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:focusable="false"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
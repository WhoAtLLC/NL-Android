<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Select country code"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#727272"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.9"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:weightSum="2">

            <com.root.wishlist.util.MybusinessEdittext
                android:id="@+id/search_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:gravity="center|left"
                android:hint="Search a contact or title to get an intro"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:contentDescription="@string/message_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:padding="7dp"
                android:src="@drawable/search" />
        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/country_code_name_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"></ListView>
</LinearLayout>
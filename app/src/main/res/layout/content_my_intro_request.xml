<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.root.wishlist.activities.leads.MyIntroRequestActivity"
    tools:showIn="@layout/activity_my_intro_request">

    <!--<android.support.design.widget.TabLayout
        android:id="@+id/requesttotab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/select_tab"
        app:tabIndicatorColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="#ffffff">

    </android.support.design.widget.TabLayout>
-->
    <android.support.design.widget.TabLayout
        android:id="@+id/requesttotab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ECECEC"
        app:tabIndicatorColor="@color/buttonColor"
        app:tabSelectedTextColor="@color/appColor"
        app:tabTextAppearance="@style/CustomTextAppearance"
        app:tabTextColor="@color/appColor">

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/requesttotab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <include layout="@layout/requestbutton" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:elevation="3dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="@color/appColor">


                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="First Name"
                    android:inputType="text"
                    android:nextFocusDown="@+id/last_name"
                    android:singleLine="true"
                    android:textColor="#464B4B"
                    android:textColorHint="@color/appColor"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:elevation="3dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:nextFocusDown="@+id/title"
                    android:singleLine="true"
                    android:textColor="#464B4B"
                    android:textColorHint="@color/appColor"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:elevation="3dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="CEO"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/company"
                    android:singleLine="true"
                    android:textColor="#464B4B"
                    android:textColorHint="@color/appColor"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="5dp"
            android:elevation="3dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="@color/appColor">


                <EditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Company"
                    android:inputType="text"
                    android:nextFocusDown="@+id/business_phone"
                    android:singleLine="true"
                    android:textColor="#464B4B"
                    android:textColorHint="@color/appColor"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:text="Business Phone"
                 android:textColor="@color/appColor"
                 android:textSize="10sp" />
 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="3dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:textColorHint="@color/appColor">

                    <EditText
                        android:id="@+id/phonespinner_id"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Business Phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:nextFocusDown="@+id/user_profile"
                        android:singleLine="true"
                        android:textColor="#464B4B"
                        android:textColorHint="@color/appColor"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>
                <!-- <TextView
                     android:id="@+id/phonespinner_id"
                     android:layout_width="150dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="country code"
                     android:textColor="#464B4B"
                     android:textSize="14sp" />-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:textColorHint="@color/appColor">

                    <EditText
                        android:id="@+id/business_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:nextFocusDown="@+id/user_profile"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#464B4B"
                        android:textColorHint="@color/appColor"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="5dp"
            android:elevation="3dp"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="#DEDEDE">


                <EditText
                    android:id="@+id/cell_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Cell Phone"
                    android:nextFocusDown="@+id/user_profile"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textColor="#464B4B"
                    android:textColorHint="#DEDEDE"
                    android:textSize="12dp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="5dp"
            android:elevation="3dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textColorHint="@color/appColor">


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="#464B4B"
                    android:textColorHint="@color/appColor"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:contentDescription="@string/message_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:src="@drawable/twitter_" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="https://twitter.com/abc"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#464B4B"
                android:textSize="14sp" />

        </LinearLayout>




        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/com_facebook_button_background_color_disabled" />
-->
    </LinearLayout>


</RelativeLayout>

